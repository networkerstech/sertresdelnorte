                <xpath
                    expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                    position="after">
                    <field name="analytic_account_id"
                        attrs="{'readonly': [('state', '!=', 'draft') ]}" />
                </xpath>
                <xpath
                    expr="//field[@name='move_ids_without_package']/form//field[@name='product_id']"
                    position="after">
