<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_employee_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.employee.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='employees_setting_container']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box"
                        id="employee_names_order_setting">
                        <div class="o_setting_right_pane">
                            <label for="employee_names_order" />
                            <div class="row">
                                <div class="text-muted col-lg-8">
                                    Order in which the name of the employees will be displayed
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="employee_names_order" required="1"
                                        class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>