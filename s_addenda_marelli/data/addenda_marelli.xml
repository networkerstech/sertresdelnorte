<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="addenda_marelli" name="Addenda Marelli">
        <cfdi:Addenda xmlns:cfdi="http://www.sat.gob.mx/cfd/4">
            <fa:Datos xmlns:fa="finanzas">
                <fa:AddendaComercial>
                    <t t-foreach="record._get_sale_order_line_mirelli()" t-as="line">
                        <fa:Finanzas t-att-PO="record._get_sale_order_mirelli()" t-att-Linea="line.id" t-att-Part="line.product_id.id" t-att-Moneda="record.currency_id.name"/>
                    </t>
                </fa:AddendaComercial>
            </fa:Datos>
        </cfdi:Addenda>
    </template>
    <record id="addenda_marelli" model="ir.ui.view">
        <field name="l10n_mx_edi_addenda_flag">True</field>
    </record>
</odoo>