<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="s_hr_customer_view_tree" model="ir.ui.view">
            <field name="name">s.hr.customer.view.tree</field>
            <field name="model">hr.customer</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="s_hr_customer_view_form" model="ir.ui.view">
            <field name="name">s.hr.customer.view.form</field>
            <field name="model">hr.customer</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="s_hr_customer_action" model="ir.actions.act_window">
            <field name="name">Customer</field>
            <field name="res_model">hr.customer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="s_hr_customer_menu"
            name="Customers"
            action="s_hr_customer_action"
            parent="hr.menu_config_employee"
            groups="base.group_user"
            sequence="23" />
    </data>
</odoo>